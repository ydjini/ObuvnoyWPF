<Window x:Class="ObuvnoyWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObuvnoyWPF.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="512" Width="768">
    <Grid Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="Вход в обувной"
                   FontSize="36" FontWeight="Bold" Margin="0, 0, 0, 15"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Логин"
                   FontSize="16"/>
        <TextBox Grid.Row="2" x:Name="textUsername" Height="36" Margin="0, 15, 0, 15"
                 VerticalContentAlignment="Center" FontSize="16"/>
        <TextBlock Grid.Row="3" Text="Пароль"
           FontSize="16"/>
        <TextBox Grid.Row="4" x:Name="textPassword" Height="36" Margin="0, 15, 0, 15"
                 VerticalContentAlignment="Center" FontSize="16"/>
        <TextBlock Grid.Row="5" x:Name="textError" Foreground="Red"
                VerticalAlignment="Center"
                FontSize="16" Margin="30, 15, 30, 15"/>

        <Grid Grid.Row="6" Margin="0, 15, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Войти" Height="48"
                Click="Login_Click" FontSize="16" Margin="30, 0, 30, 0"
                Background="Green" Foreground="White"/>
            <Button Grid.Column="1" Content="Войти как гость" Height="48"
                Click="Guest_Click" FontSize="16" Margin="30, 0, 30, 0"
                Background="DarkGray" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
